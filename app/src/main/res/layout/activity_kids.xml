<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dabba"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_to_home_button" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Kid's Name" />

    <EditText
        android:id="@+id/grade1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Kid's Grade" />

    <Button
        android:id="@+id/add_kid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:icon="@drawable/button_design" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:text="Add Another Kid" />

    <Button
        android:id="@+id/add_vehicle"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:text="Add Vehicle" />

    <EditText
        android:id="@+id/make"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Make" />

    <EditText
        android:id="@+id/model"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Model" />

    <EditText
        android:id="@+id/number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="License plate number" />

    <Button
        android:id="@+id/add2"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:text="Add Vehicle" />

    <Button
        android:id="@+id/another_vehicle"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:text="Add Another Vehicle" />


</LinearLayout>