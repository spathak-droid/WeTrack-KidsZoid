<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="540dp"
    android:layout_gravity="center"
    android:background="@drawable/showlisc"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/showlisc"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/liscense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/liscense">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="14dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/car"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:text="(Vehicle Name)" />

                <TextView
                    android:id="@+id/vehicle_pop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/julee"
                    android:textSize="20sp"
                    android:textColor="#303CF8"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/plate"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:text="(Plate Number)"
                    />

                <TextView
                    android:id="@+id/plate_pop"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/julee"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:textColor="#303CF8"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/kid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:text="(Kids Name)" />

                <TextView
                    android:id="@+id/kids_pop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/julee"
                    android:textSize="20sp"
                    android:textColor="#303CF8"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Drop-off"
            android:id="@+id/drop_check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginStart="170dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick-Up"
            android:gravity="center"
            android:id="@+id/pick_check"/>
    </LinearLayout>
    </RelativeLayout>


        <Button
            android:id="@+id/btn_cc"
            android:backgroundTint="#F24264"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="Check"
            android:fontFamily="@font/bungee"
            android:textStyle="bold" />
    </LinearLayout>






</LinearLayout>